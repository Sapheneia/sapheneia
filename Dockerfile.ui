# Sapheneia UI Dockerfile
# Flask frontend for TimesFM forecasting

FROM python:3.11-slim

LABEL maintainer="Sapheneia Team"
LABEL description="TimesFM Forecasting UI"

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    libmagic1 \
    && rm -rf /var/lib/apt/lists/*

# Install uv package manager
ENV UV_HOME=/usr/local/bin
RUN curl -LsSf https://astral.sh/uv/install.sh | sh && \
    mv /root/.cargo/bin/uv /usr/local/bin/uv 2>/dev/null || \
    mv /root/.local/bin/uv /usr/local/bin/uv 2>/dev/null || true

# Verify uv is installed
RUN which uv && uv --version

# Copy project files
COPY pyproject.toml ./
COPY ui/ ./ui/
COPY forecast/ ./forecast/
COPY .env .env

# Install dependencies using uv
RUN uv pip install --system --no-cache -e . && \
    uv pip install --system --no-cache torch

# Create necessary directories
RUN mkdir -p ui/uploads ui/results logs

# Set environment variables
ENV UI_API_BASE_URL=http://forecast:8000
ENV UI_PORT=8080

# Expose UI port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run UI server
CMD ["python", "-m", "flask", "--app", "ui/app.py", "run", "--host", "0.0.0.0", "--port", "8080"]
